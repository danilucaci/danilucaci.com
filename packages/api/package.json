{
  "name": "api",
  "description": "danilucaci.com API Endpoints",
  "private": true,
  "version": "1.0.0",
  "author": "Dani Lucaci <hello@danilucaci.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "gatsby",
    "portfolio",
    "personal blog",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danilucaci/danilucaci"
  },
  "main": "./src/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test:watch": "jest --watchAll",
    "test:related": "jest --bail --findRelatedTests --passWithNoTests",
    "test:ci:all": "jest --bail",
    "lint:js": "eslint . --ext .js",
    "lint:js:fix": "yarn run lint:js -- --fix",
    "lint:format": "prettier --write .",
    "lint:format:check": "prettier --check .",
    "pre:commit": "lint-staged",
    "pre:push": "yarn run lint:js && yarn run lint:format:check && yarn run test:ci:all"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase-admin": "^11.0.1",
    "helmet": "^5.1.1",
    "joi": "^17.6.0",
    "loglevel": "^1.8.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.8",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/mongoose": "^5.11.97",
    "@babel/eslint-parser": "^7.18.9",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^28.1.3",
    "jest-environment-node": "^28.1.3",
    "mongodb-memory-server": "^8.8.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  }
}
